<% content_for(:template_name, "card") %>
<%= form_with url: parent_steps_path, method: :put, local: true do %>
  <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
    <div class="form-card__header spacing-below-35">
      <div class="emoji emoji--bigger spacing-below-25 spacing-below-25 emoji--bust"></div>
      <h1 class="form-card__title">
        <%= t("parent.header") %>
      </h1>
    </div>
    <div class="form-card__content">
      <div class="grid">
        <div class="grid__item">
          <p class="text text--left"><%= t("add_student.one_at_a_time_add") %></p>
        </div>
      </div>
      <div class="grid">
        <div class="grid__item text--left">
          <%= f.cfa_input_field(:parent_first_name, t("parent.first_name"), help_text: t("parent.legally")) %>
          <%= f.cfa_input_field(:parent_last_name, t("parent.last_name"), help_text: t("parent.legally")) %>
          <%= f.cfa_date_select(
                  :parent_dob,
                  t("parent.what_is_their_dob"),
                  options: {
                      start_year: Time.now.year,
                      end_year: Time.now.year - 100,
                  }
              ) %>
        </div>
      </div>
      <div class="form-card__footer">
        <%= f.button t("shared.continue"), class: "button button--primary" %>
      </div>
    </div>
  <% end %>
<% end %>
