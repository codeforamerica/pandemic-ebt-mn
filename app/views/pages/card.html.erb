<% content_for(:template_name, "card") %>

<div class="form-card__header spacing-below-35">
  <h1 class="form-card__title">
    <%= t("received_card.header") %>
  </h1>
</div>
<div class="form-card__content">
  <div class="grid">
    <div class="grid__item">
      <p class="text--left">
        <%= t("received_card.it_looks_like_html") %>
      </p>
      <div class="spacing-below-5">
        <%= image_tag("mn-ebt.png", alt: t('received_card.alt_text_card')) %>
      </div>
    </div>
  </div>
</div>
<div class="form-card__footer">
  <a href="<%= done_path %>" class="button"><i class="button__icon emoji emoji--checkmark"></i> Yes</a>
  <a href="<%= eligible_steps_path %>" value="no" class="button"><i class="button__icon emoji emoji--crossmark"></i> No</a>
</div>